<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relatif"
    android:onClick="onClickTombolgHItung">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/ril1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/imaji1"
        android:layout_above="@+id/ril2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/ril2"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/ril1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/imaji2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/ril2"
        android:layout_alignLeft="@+id/imaji1"
        android:layout_alignStart="@+id/imaji1"
        android:layout_alignBottom="@+id/ril2"
        android:layout_alignRight="@+id/imaji1"
        android:layout_alignEnd="@+id/imaji1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah"
        android:id="@+id/textView"
        android:layout_above="@+id/imaji2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil"
        android:id="@+id/button"
        android:onClick="onClickTombolHitung"
        android:layout_below="@+id/imaji2"
        android:layout_toLeftOf="@+id/imaji2"
        android:layout_toStartOf="@+id/imaji2"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/hasil"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_toLeftOf="@+id/imaji2"
        android:layout_toStartOf="@+id/imaji2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Real"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/hasil"
        android:layout_toLeftOf="@+id/hasil"
        android:layout_toStartOf="@+id/hasil"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Imajiner"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/hasil"
        android:layout_alignRight="@+id/imaji2"
        android:layout_alignEnd="@+id/imaji2" />

</RelativeLayout>
